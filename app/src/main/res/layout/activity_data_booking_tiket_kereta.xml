<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#405160"
        android:gravity="center"
        android:paddingVertical="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travelocal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Booking Tiket Kereta"
        android:textColor="#405160"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/garis_luar"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:textColor="#405160" />
            <EditText
                android:id="@+id/nik"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textColor="#405160" />
            <EditText
                android:id="@+id/Nama"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#405160" />
            <EditText
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat Tanggal Lahir"
                android:textColor="#405160" />
            <EditText
                android:id="@+id/lahir"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="date" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Hp"
                android:textColor="#405160" />
            <EditText
                android:id="@+id/noH"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="text" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#405160" />
            <EditText
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:padding="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="text" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pesan"
                android:onClick="pembayaran_kereta"
                android:backgroundTint="#405160"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bagian Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#405160">

        <!-- Tombol Beranda -->
        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BERANDA"
            android:textColor="#FFFFFF"
            android:backgroundTint="#405160"
            android:onClick="beranda"
            android:drawableTop="@drawable/home"/>

        <!-- Tombol Pemesanan -->
        <Button
            android:id="@+id/order_button"
            android:layout_width="0dp"
            android:onClick="pemesanan"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PEMESANAN"
            android:textColor="#FFFFFF"
            android:backgroundTint="#405160"
            android:drawableTop="@drawable/buku"/>

        <!-- Tombol Akun -->
        <Button
            android:id="@+id/account_button"
            android:layout_width="0dp"
            android:onClick="akun"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="AKUN"
            android:textColor="#FFFFFF"
            android:backgroundTint="#405160"
            android:drawableTop="@drawable/profile"/>
    </LinearLayout>
</LinearLayout>